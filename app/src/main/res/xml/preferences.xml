<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="@string/user_notification"
        android:key="sync_settings">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="notifyByToast"
            android:summary="@string/show_notif_as_toast"
            android:title="@string/notify_via_toasts" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="notifyByStatusBar"
            android:summary="@string/show_notif_on_statusbar"
            android:title="@string/notify_via_statusbar" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Connectivity Settings"
        android:key="conn_settings">

        <CheckBoxPreference
            android:key="@string/conn_only_wifi"
            android:title="@string/preserve_data"
            android:summary="@string/only_conn_wifi"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:dependency="@string/conn_only_wifi"
            android:key="warnNoWifi"
            android:title="No WiFi Warning"
            android:summary="Warn when not connected over Wifi"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:dependency="@string/conn_only_wifi"
            android:key="@string/autosync"
            android:title="Allow Autosync"
            android:summary="Allow app to check connection"
            android:defaultValue="false"/>

    </PreferenceCategory>

</PreferenceScreen>